<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.res.bom_system.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/core"
            app:layout_constraintEnd_toStartOf="@+id/droid"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/Tilescolumn" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="91dp"
            android:layout_height="106dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/droid"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/Tilescolumn"/>

    <ListView
            android:layout_width="259dp"
            android:layout_height="464dp"
            android:id="@+id/Tilescolumn"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Alles ablehnen"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_declineAll"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp" android:layout_marginStart="69dp"
            app:layout_constraintStart_toEndOf="@+id/view" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <GridLayout
            android:layout_width="1013dp"
            android:layout_height="711dp" android:id="@+id/gridLayout"
            android:columnCount="2"
            android:rowCount="3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </GridLayout>

    <RelativeLayout
            android:layout_width="1014dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view" android:layout_marginEnd="6dp">


        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageButton1" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="1527dp" android:background="#ffffff"
                android:layout_marginBottom="84dp" android:layout_marginStart="48dp"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>


        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageButton2" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="1527dp" android:background="#ffffff"
                android:layout_marginStart="26dp"
                android:layout_alignTop="@+id/imageButton1" android:layout_toEndOf="@+id/imageButton1"/>

        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageButton3" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="1527dp" android:background="#ffffff"
                android:layout_marginStart="27dp"
                android:layout_alignTop="@+id/imageButton2" android:layout_toEndOf="@+id/imageButton2"/>

        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@android:color/holo_green_dark"
                android:id="@+id/imageButton4" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="1527dp" android:background="#ffffff"
                android:layout_marginStart="27dp"
                android:layout_alignTop="@+id/imageButton3" android:layout_toEndOf="@+id/imageButton3"/>
    </RelativeLayout>



    <View
            android:layout_width="6dp"
            android:layout_height="713dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/Tilescolumn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
